def main():
	print("Hello. This is the kg/lb converter program.")
	answer = input("What unit do you have? (kg/lb)")

	if answer == "kg":
		amount = int(input("What is the amount of kg you want to convert?"))
		answerToLbs = amount * 2.20462
		print(str(amount) +  " kg in lbs is equal to " + str(answerToLbs) + " lbs.")
	elif answer == "lb":
		amount2 = int(input("What is the amount of lbs you want to convert?"))
		answerToKg = amount2 * 0.453592
		print(str(amount2) + " lb in kg is equal to " + str(answerToKg) + " kg.")
	else:
		print("You muster enter a valid operation (kg/lb)")
		main()
		
		
main()

runAgain = input("Do you want to run the program again? (y/n)")

while runAgain == "y":
	main()
	runAgain = input("Do you want to run the program again? (y/n)")
else:
	print("Have a nice day.")
